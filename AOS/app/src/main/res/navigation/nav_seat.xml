<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_seat"
    app:startDestination="@id/seatSelectFragment">

    <fragment android:id="@+id/seatPaymentFragment"
        android:name="com.softeer.togeduck.ui.home.seat.SeatPaymentFragment"
        android:label="fragment_seat_payment" tools:layout="@layout/fragment_seat_payment">
        <action android:id="@+id/action_seatPaymentFragment_to_seatPaymentCompleteFragment"
            app:destination="@id/seatPaymentCompleteFragment" app:popUpTo="@id/nav_seat" />
    </fragment>
    <fragment android:id="@+id/seatSelectFragment"
        android:name="com.softeer.togeduck.ui.home.seat.SeatSelectFragment"
        android:label="fragment_seat_select" tools:layout="@layout/fragment_seat_select">
        <action android:id="@+id/action_seatSelectFragment_to_seatPaymentFragment"
            app:destination="@id/seatPaymentFragment" />
    </fragment>
    <fragment android:id="@+id/seatPaymentCompleteFragment"
        android:name="com.softeer.togeduck.ui.home.seat.SeatPaymentCompleteFragment"
        android:label="fragment_seat_payment_complete"
        tools:layout="@layout/fragment_seat_payment_complete" />
</navigation>